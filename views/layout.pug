doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scal=1')
    meta(name='mobile-web-app-capable' content='yes')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='manifest' href='/manifest.json')
  body.bg-dark.text-light
    nav.navbar.navbar-expand-md.navbar-dark.bg-green.justify-content-between
      a(class='navbar-brand' href='/')
        div.float-left
          img(height='34px' src='data:image/svg+xml;utf8;base64,')
        div.float-left.nav-title-text Greenhouse
      button(class='navbar-toggler' type='button' data-toggle='collapse' data-target='#sidenav' aria-controls='sidenav' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
    div.container-fluid
      div.row.navbar-expand-md
        nav(class='navbar-collapse collapse col-md-3 col-lg-2 navbar-dark bg-green px-3 py-2' id='sidenav' style='align-items: start;')
          div.sidebar-sticky
            ul.nav.navbar-nav.flex-column
              li.nav-item
                a(class='nav-link' href='/devices/master')
                  i(class='fas fa-tv' aria-hidden='true')
                  span Master Remote
              li.nav-item
                a(class='nav-link' href='/devices/tv')
                  i(class='fas fa-tv' aria-hidden='true')
                  span Tv Remote
              li.nav-item
                a(class='nav-link' href='/devices/soundbar')
                  i(class='fas fa-tv' aria-hidden='true')
                  span Soundbar Remote
              li.nav-item 
                a(class='nav-link' href='/devices/hdmi')
                  i(class='fas fa-tv' aria-hidden='true')
                  span HDMI Remote
        main(role='main' class='col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 bg-dark text-light')
          //-include deviceSelect
          block deviceKeys
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/lircNodeJsWeb.js')
